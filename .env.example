# Waxell Platform (required for observability — get key at https://app.waxell.dev/settings/api-keys)
WAXELL_API_KEY=wax_sk_your_key_here
WAXELL_API_URL=https://api.waxell.dev

# Kill switch — set to "false" to disable all telemetry
# WAXELL_OBSERVE=true

# Debug mode — enable console span export
# WAXELL_DEBUG=true

# Capture prompt/response content in traces (default: false for privacy)
# WAXELL_CAPTURE_CONTENT=false

# LLM Provider API Keys (optional — all examples support --dry-run with mock clients)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
GROQ_API_KEY=gsk_your-groq-key-here

# LiteLLM proxy URL (only needed for litellm example)
# LITELLM_API_URL=http://localhost:4000
